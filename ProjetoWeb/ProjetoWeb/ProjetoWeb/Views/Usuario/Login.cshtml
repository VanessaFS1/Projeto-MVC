@model ProjetoWeb.usuario

@using (Html.BeginForm(@*"Login", "UsuarioController", FormMethod.Post*@))
{
    @Html.AntiForgeryToken()

    <!-- Início de layout da página de Login -->
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <h1>Login</h1>
                <br />
                <form class="form-signin" runat="server" method="post">
                    <div>
                        <input type="text" class="form-control" id="form-login" placeholder="Login" name="Login" required autofocus>
                    </div>
                    <br />
                    <div>
                        <input type="password" class="form-control" id="form-password" placeholder="Senha" name="Senha" required>
                    </div>
                    <br />
                    <span role="alert" class="error-msg" id="errormsg_0_Passwd"></span>
                    <input type="submit" value="Entrar" class="btn btn-lg btn-primary btn-block" onclick="Login()">
                    <label class="checkbox pull-left">
                        <input type="checkbox" value="remember-me"> Lembrar-me
                    </label>
                    <br />
                    <br />
                </form>

                <a href="~/Usuario/Cadastrar" class="text-center new-account">Criar conta</a>
            </div>
        </div>
    </div>
    <!-- Fim de layout da página de Login -->

}